<h1>Listing Posts</h1>

<table>
  <thread>
	<tr>
	  <th>Category</th>
	  <th>Title</th>
	  <th>Body</th>
	  <th colspan="3"></th>
	</tr>
  </thread>

  <tbody>
	<% @posts.each do |post| %>
	<tr>
	  <td><%= post.category_id %></td>
	  <td><%= post.title %></td>
	  <td><%= post.body %></td>
	</tr>
	<% end %>
  </tbody>
</table>

<br>
